[EmailTemplateRules]
require_header = true
header_template = "deriv-red-slash-header.html"
- copy the exact same codes into the new file as a header. 

require_footer = true
footer_template = "footer.html"
- copy the exact same codes into the new file as a footer.

enforce_header_footer_position = top_bottom
allowed_content_blocks = [ "body", "promotion", "unsubscribe", "legal"]

